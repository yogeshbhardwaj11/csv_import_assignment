<div class="container">
  <%= flash[:notice] %>
	<div>
	  <h4>Import data!</h4>
	  <%= form_tag import_questions_path, multipart: true do %>
	    <%= file_field_tag :file %>
	    <%= submit_tag "Import from file" %>
	  <% end %>
	</div>
  
  <br/>
  <% unless @questions.blank? %>
	<table id="example" class="table table-striped table-bordered" style="width: 1000px;">
		<thead>
			<th>Question</th>
			<th>Teamng Stages</th>
			<th>Appears (day)</th>
			<th>Frequency</th>
			<th>Type</th>
			<th>Required?</th>
			<th>Condition</th>
			<th>Role</th>
			<th>Mapping</th>
		</thead>
		<tbody>
		<% @questions.each do |question| %>
			<tr>
				<td><%= question.content %></td>
				<td><%= question.teaming_stages %></td>
				<td><%= question.appears_day %></td>
				<td><%= question.frequency %></td>
				<td><%= question.question_type %></td>
				<td><%= question.required ? "yes" : "no" %></td>
				<td><%= question.conditions %></td>
				<td><%= question.role.name %></td>
				<td><%= question.mapping.map_name %></td>
			</tr>
		<% end %>
		</tbody>
	</table>
  <% end %>
</div>